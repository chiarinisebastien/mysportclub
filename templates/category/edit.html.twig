{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}


{% block stylesheet %}{% endblock %}



{% block body %}





<h1>Category</h1>

{% include "category/_submenu.html.twig" %}

<div class="row">
<div class="col-lg-4 col-sm-12 col-md-12">

    <div class="col-lg-12 col-sm-12 col-md-12">
        {{ include('category/_form.html.twig') }}
        </div>

<div class="row">
{{ include('category/_delete_form.html.twig') }}
</div>

</div>
<div class="col-lg-6 col-sm-12 col-md-12 p-4 mt-2">
    {% if category.players %}
    {% for player in category.players %}    
    <div class="row" id="item-list">
        <a class="btn btn-sm btn-info col-lg-3 col-sm-12 colfor text-start list-item m-1 p-2" href="{{ path('app_player_edit', {'id':player.id}) }}">
            {{ player.firstname }} {{ player.lastname }} 
        </a>
    </div>
    {% endfor %}
    {% endif %}

</div>
</div>













{% endblock %}
