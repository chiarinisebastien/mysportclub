{% extends 'base.html.twig' %}

{% block title %}Players{% endblock %}


{% block stylesheet %}{% endblock %}



{% block body %}

<h1>Players</h1>


{% include "player/_submenu.html.twig" %}

{{ include('player/_form.html.twig') }}

<div class="row">
{{ include('player/_delete_form.html.twig') }}
</div>

{% if player.users %}
<div class="row mt-3 ms-2">
    <hr>
        <div class="card col-lg-2 m-1 p-0 col-sm-12 col-md-6 user-item">
            <div class="card-header">Account Manager</div>
            <div class="card-body">
                <ul>
                    {% for user in player.users %}
                        <li>{{ user.email }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
</div>
{% endif %}

{% endblock %}
